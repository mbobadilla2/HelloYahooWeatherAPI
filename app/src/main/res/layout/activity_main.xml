<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fernando2.com.helloyahooweatherapi.MainActivity">


    <Button
        android:id="@+id/button_getJson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Get JSON" />

    <TextView
        android:id="@+id/textView_showTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_getJson"
        android:layout_marginTop="35dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="N/A"
        android:textSize="36dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView_showLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_showTemp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="serif"
        android:text="Location N/A"
        android:textSize="26dp"
        android:textStyle="bold" />
</RelativeLayout>
